<!-- Inicio Tipo de Usuarios -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Gestión Clasificación Documento</h6>
  </div>
  <div class="card-body">

    <div class="container-fluid">
      <div class="row">

        <div class="col-md-12">
          <%= simple_form_for(@tipo_usuario) do |f| %>
            <div class="row">
              <div class="col-md-4">
              </div>
              <div class="col-md-4">
              <%= f.error_notification %>
              <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

              <div class="form-inputs">
                <%= f.input :nombre, type: "txt", placeholder: "Ingrese solo letras", required: true, autofocus: true, pattern: "^[A-Za-zñÑáéíóúÁÉÍÓÚ- _\s]+$" %>
                <%= f.input :descripcion, as: :text, input_html: {rows: 5}, required: false %>
              </div>
              </div>
                <div class="col-md-4">
                </div>
            </div>

              <br/>
              <div class="row">
                <div class="col-md-12 text-center">
                  <% if tiene_permiso("BOTON REGISTRAR", "VER") %>
                    <%= button_tag f.submit, class: "btn btn-success btn-sm", data: {controller: 'sweetalert', action: 'click->sweetalert#btnConfirmar',
                                                                                     sweetalert_confirm_alert_value: "#{titulo_tipo_usuario}",
                                                                                     sweetalert_cancel_alert_value: "Cancelado",
                                                                                     sweetalert_confirm_title_value: '<strong style="color: #1d71b9;">Esta seguro de aplicar los cambios?</strong>',
                                                                                     sweetalert_confirm_btn_value: '<i class="fas fa-check-circle"></i><strong> Si, '+"#{titulo_tipo_usuario}"+'</strong>',
                                                                                     sweetalert_cancel_btn_value: '<i class="fas fa-times-circle"></i><strong> No, Cancelar</strong>',
                                                                                     sweetalert_cancel_title_value: "Se ha cancelado el evento #{titulo_tipo_usuario} #{@tipo_usuario.nombre}" } do %>
                      <span class="icon text-50">
                        <i class="fas fa-edit"></i>
                      </span>
                      <span class="text"><%= titulo_tipo_usuario.upcase %></span>
                    <%end%>
                  <% end %>
                  <%= link_to tipo_usuarios_path, class: "btn btn-outline-danger btn-sm" do %>
                    <span class="icon text-red-50">
                      <i class="fas fa-arrow-circle-left"></i>
                    </span>
                    <span class="text">CANCELAR</span>
                  <%end%>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
