<!-- Inicio menus -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Gestión de Menú</h6>
  </div>
  <div class="card-body">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12 text-right">
          <%= link_to new_menu_path, class: "btn btn-success btn-sm" do %>
          <span class="icon text-green-50">
            <i class="fas fa-plus-circle"></i>
          </span>
          <span class="text">AGREGAR</span>
          <%end%>
          <%= link_to root_path, class: "btn btn-outline-danger btn-sm" do %>
          <span class="icon text-red-50">
            <i class="fas fa-home"></i>
          </span>
          <span class="text">INICIO</span>
          <%end%>
        </div>
      </div>
      <br>

      <div class="row">
        <div class="col-md-12 table-responsive-sm">
          <table id="datatable" class="table table-hover table-sm table-bordered display" cellspacing="0" style="width:100%">
            <thead class="thead-light">
              <tr>
                <th class="text-center"> id </th>
                <th class="text-center"> Icono </th>
                <th> Nombre </th>
                <th> Descripción </th>
                <th class="text-center"> Estado </th>
                <th class="text-center"> Opciones</th>

              </tr>
            </thead>
            <tbody>
              <% @menus.each do |menu| %>
              <tr>
                <td class="text-center"><%= menu.id %></td>
                <td class="text-center"><i class="<%= menu.icono %>" aria-hidden="true"></i></td>
                <td><%= menu.nombre %></td>
                <td><%= menu.descripcion %></td>
                <td class="text-center"><%= menu.estado %></td>

                <td class="text-center">
                  <% if menu.estado == 'A' %>
                    <%= link_to edit_menu_path(menu), class: "btn btn-outline-info btn-sm " do %>
                      <i class="fas fa-edit"></i>
                    <%end%>
                  <% end %>

                  <% if menu.estado == 'A' %>
                    <%= link_to  inactivar_menu_path(:id => menu.id), class: "btn btn-outline-danger btn-sm ", data: { confirm: 'Se inactivara' } do %>
                      <i class="fas fa-trash-alt"></i>
                    <%end%>
                  <% else %>
                    <%= link_to  activar_menu_path(:id => menu.id), class: "btn btn-outline-success btn-sm ", data: { confirm: 'Se activara' } do %>
                      <i class="fas fa-trash-restore-alt"></i>
                    <%end%>
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>