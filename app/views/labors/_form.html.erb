<!-- Inicio caracteristica por equipos -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Gesti√≥n de Labores</h6>
  </div>
  <div class="card-body">
    <div class="container-fluid">
      <div class="row">
        <div class="card-body">
          <center>
            <h5>- DATOS DEL LABOR - </h5>
            <hr>
          </center>
          <div class="col-md-12">
            <%= simple_form_for (@labor) do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
            <div class="row">
              <div class="col-md-8">
                <div class="form-inputs">
                  <%= f.input :nombre %>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-inputs">
                  <%= f.input :numero_personas %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-8">
                <div class="form-inputs">
                  <%= f.input :descripcion %>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-inputs">
                  <%= f.input :tiempo %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 text-right">
                
                <% if tiene_permiso("BOTON REGISTRAR", "VER") %>
                <%= button_tag f.submit, class: "btn btn-success btn-sm", :id=>"open-tabla" do %>
                <span class="icon text-50">
                  <i class="fas fa-edit"></i>
                </span>
                <span class="text">REGISTRAR</span>
                <%end%>
                <% end %>

                <%= link_to labors_path, class: "btn btn-outline-danger btn-sm" do %>
                <span class="icon text-red-50">
                  <i class="fas fa-arrow-circle-left"></i>
                </span>
                <span class="text">REGRESAR</span>
                <%end%>

              </div>
            </div>
            <% end %>
          </div>
          <br>
        </div>
      </div>
    </div>
  </div>
</div>
<br>
<br>