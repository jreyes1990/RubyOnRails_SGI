<!-- Inicio areas -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Gestión de Área</h6>
        </div>
        <div class="card-body">

          <div class="container-fluid">
            <div class="row">
            
              <div class="col-md-12">
               <%= form_with(model: area, local: true) do |form| %>
                <div class="row">
                  <div class="col-md-3">
                  </div>
                  <div class="col-md-6">
                   
                      <% if area.errors.any? %>
                        <div id="error_explanation">
                          <h2><%= pluralize(area.errors.count, "error") %> Prohibido Guardar esta Área:</h2>

                          <ul>
                            <% area.errors.full_messages.each do |message| %>
                              <li><%= message %></li>
                              <% end %>
                            </ul>
                            </div>
                           <% end %>
                        
                        <div class="field">
                          <%= form.label :empresa_id %>
                          <%= collection_select(:area, :empresa_id, Empresa.where(:estado => 'A'), :id, :nombre, {:prompt => "Seleccione Una Empresa"}, {:class => "form-control select2", autofocus:true, required: true}) %>
                        </div>
                        <br/>

                        <div class="field">
                          <%= form.label :nombre %>
                          <%= form.text_field :nombre, class:"form-control", type: "txt", placeholder: "Ingrese solo letras", required: true, pattern: "^[A-Za-zñÑáéíóúÁÉÍÓÚ- \s]+$" %>
                        </div>
                        <br/>
                        <div class="field">
                          <%= form.label :descripcion %>
                          <%= form.text_area :descripcion, size: '40x5', class:"form-control", type: "txt", placeholder: "", required: true %>
                        </div> 
              
                  </div>
                  <div class="col-md-3">
                  </div>
                </div>
                <br/>
                <div class="row">
                  <div class="col-md-12 text-right">
                    <% if tiene_permiso("BOTON REGISTRAR", "VER") %>
                     <%= button_tag form.submit, class: "btn btn-success btn-sm" do %>
                            <span class="icon text-white-50">
                            <i class="fas fa-edit"></i>
                            </span>
                            <span class="text">REGISTRAR</span>                          
                        <%end%>
                      <% end %>

                        <%= link_to areas_path, class: "btn btn-outline-danger btn-sm" do %>
                            <span class="icon text-red-50">
                            <i class="fas fa-arrow-circle-left"></i>
                            </span>
                            <span class="text">CANCELAR</span>                          
                        <%end%>

                  </div>
                </div>
                <% end %>
              </div>

            </div>
          </div>
    </div>
</div>
<br>